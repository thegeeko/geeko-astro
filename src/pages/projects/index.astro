---
import BasicLayout from "../../layouts/BasicLayout.astro";
import NavBar from "../../components/NavBar.astro";

import projects from "../../../content/projects.json";

---

<BasicLayout title="Abdelhadi | Projects">
	<div class="flex flex-col container m-auto justify-between">
		<div class="h-1/6 py-6 px-4">
			<NavBar active="projects" />
		</div>

		<div class="text-3xl text-center mx-5 my-14">
			Projects I've enjoyed and I'm enjoying working on ðŸ˜¼.
		</div>

		<div class="py-10">
			<div
				class="text-xl grid md:grid-cols-2 lg:grid-cols-3 gap-10 drop-shadow-lg justify-items-center md:justify-items-start">
				{ projects.map(p => (
				<div class="bg-black text-white py-5 px-6 rounded-md w-10/12 md:w-full flex flex-col justify-between">
					<div class="flex justify-between">
						<div class="text-3xl font-bold"> {p.name} </div>
						<div class="my-auto hover:underline underline-offset-4 text-sm"><a target="_blank" href={p.link}> visit ðŸ‘‰
							</a></div>
					</div>
					<div class="text-base mt-3">{p.description}.</div>
					<div class="flex gap-3 text-sm font-bold mt-8 flex-wrap">
						{ p.tech.map(t => (
						<div class="bg-white rounded-md text-black px-3">{t}</div>
						)) }
					</div>
				</div>
				))}
			</div>
		</div>

	</div>
</BasicLayout>